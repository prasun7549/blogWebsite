<%- include('partials/header'); -%>
<% for(var i=0;i<posts.length;i++){ %>
  <form action="/delete" method="post">
  <div class="title">
  <h1><%= posts[i].heading %></h1>
  <button type="submit" class="btn " name="id"value=<%= posts[i]._id %>>Delete</button>
</div>
  <p><%= posts[i].content.substr(0,100)+"...."%><a href="/posts/<%=posts[i].heading %>"> Read more</a></p>
</form>
<% } %>
<%- include('partials/footer'); -%>